
@using Microsoft.AspNetCore.Identity
@using home_budget_app.Models;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="user-info pr-5">
    @if (SignInManager.IsSignedIn(User))
    {
    
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="bi bi-person-circle"></i> @User.Identity?.Name!</a>
        <form  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="btn btn-login"><i class="bi bi-person-fill-lock"></i> Wyloguj</button>
        </form>
    }
    else
    {

        <a class="btn btn-login" asp-area="Identity" asp-page="/Account/Register"><i class="bi bi-person-fill-add"></i> Zarejestruj się</a>

        <a class="btn btn-login" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-person-fill-lock"></i> Logowanie</a>

    }
</div>
